extends layout

block content
  div.mdl-grid.mdl-grid__container
    div.mdl-cell.mdl-cell--12-col
      h1= title
      p Welcome to #{title}
    div.reviews.mdl-cell.mdl-cell--12-col
      - each review in reviews
        a(href='/reviews/get/'+review.id)
          div.review
            - each val, key in review
              li #{key}: #{val}
        a(href='/reviews/delete/' + review.id)
          i.material-icons close
  h2 Edit review

